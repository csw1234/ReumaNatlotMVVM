<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.alonz.reumanatlot_mvvm.Fragments.ItemsMainFragment"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/meyham"
        android:layout_width="382dp"
        android:layout_height="223dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/gridLayout"
 />
    <ImageView
        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_favorite_hollow_black"
        android:layout_marginRight="8dp"
            android:layout_alignRight="@id/meyham"
        android:layout_alignTop="@id/meyham"
        />

    <ProgressBar
        android:id="@+id/pb_meyham"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:layout_marginTop="106dp"
        android:layout_centerInParent="true"
 />


    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="301dp"
        android:layout_height="211dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/color1"
            style="@style/MeyhamButton" />

        <Button
            android:id="@+id/color2"
            style="@style/MeyhamButton"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/color3"
            style="@style/MeyhamButton"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/color4"
            style="@style/MeyhamButton"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/color5"
            style="@style/MeyhamButton"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/color6"
            style="@style/MeyhamButton"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/color7"
            style="@style/MeyhamButton"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/color8"
            style="@style/MeyhamButton"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/color9"
            style="@style/MeyhamButton"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/color10"
            style="@style/MeyhamButton"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/color11"
            style="@style/MeyhamButton"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/color12"
            style="@style/MeyhamButton"
            app:layout_column="4"
            app:layout_row="3" />

    </android.support.v7.widget.GridLayout>

    />

</RelativeLayout>
